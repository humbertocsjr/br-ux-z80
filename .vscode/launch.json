    "version": "0.2.0",
    "configurations": [
        {
            "name": "tlang",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tlang",
            "args": ["test.t", "test.tok"],
            "stopAtEntry": false,
            "preLaunchTask": "build tlang",
            "cwd": "${workspaceFolder}/tools/tlang/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Definir Tipo de Desmontagem como Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}